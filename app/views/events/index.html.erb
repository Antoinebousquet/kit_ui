<% content_for :title, "Events index" %>

      <!-- Jumbotron -->
      <div class="jumbotron" style="background-image: url('/jumbo_image.jpg');">
        <div class="container">
          <h1 class="display-3">Heavens are bright.</h1>
          <h3>So, wanna hang out in Paradise ? Good news, we've got some nice events you can attend to ! And we swear there is no harp nor flute involved !</h3>
        </div>
      </div>

      <!-- Actual display of events -->
      <div class="container">
        <!-- Example row of columns -->
        <div class="row">
          <% @events.each do |event| %>
            <div class="col-md-4">
              <h2><%= event.title %></h2>
              <p><%= event.start_date %></p>
              <p><%= event.description %></p>
              <p><%= link_to 'View details', event, class: 'btn btn-info' %>
            </div> <!-- /col-md-4 -->
          <% end %>
        </div> <!-- /row -->

        <hr>

      </div> <!-- /container -->

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>Duration</th>
      <th>Description</th>
      <th>Price</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.duration %></td>
        <td><%= event.description %></td>
        <td><%= event.price %></td>
        <td><%= event.location %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path %>
